<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="220226-1" author="kspar">
        <!-- Add new jsonb feedback column and migrate existing data -->
        <addColumn tableName="teacher_activity">
            <column name="feedback" type="jsonb">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <sql><![CDATA[
            UPDATE teacher_activity
            SET feedback = jsonb_build_object(
                'general_md', feedback_adoc,
                'general_html', feedback_html,
                'inline', '[]'::jsonb
            )
            WHERE feedback_adoc IS NOT NULL;
        ]]></sql>
    </changeSet>

    <changeSet id="220226-2" author="kspar">
        <!-- Drop old columns after data has been migrated -->
        <dropColumn tableName="teacher_activity" columnName="feedback_adoc"/>
        <dropColumn tableName="teacher_activity" columnName="feedback_html"/>
    </changeSet>

    <changeSet id="220226-3" author="kspar">
        <renameColumn tableName="feedback_snippet"
                      oldColumnName="snippet_adoc" newColumnName="snippet_md"/>
    </changeSet>

</databaseChangeLog>
